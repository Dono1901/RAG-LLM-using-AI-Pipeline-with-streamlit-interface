# RAG-LLM Financial Report Insights - Environment Variables
# Copy this file to .env and fill in your values

# Docker Model Runner (Docker Desktop built-in, Ollama-API compatible)
RAG_LLM_MODEL=llama3.2
RAG_EMBEDDING_MODEL=mxbai-embed-large
OLLAMA_HOST=http://localhost:12434

# Document settings
RAG_CHUNK_SIZE=500
RAG_CHUNK_OVERLAP=50
RAG_TOP_K=3

# Limits
RAG_MAX_FILE_SIZE_MB=200
RAG_MAX_QUERY_LENGTH=2000
RAG_MAX_TOP_K=20
RAG_MAX_WORKBOOK_ROWS=500000

# LLM
RAG_LLM_TIMEOUT_SECONDS=120

# Circuit breaker
RAG_CIRCUIT_BREAKER_FAILURE_THRESHOLD=3
RAG_CIRCUIT_BREAKER_RECOVERY_SECONDS=30

# Financial analysis
RAG_DEFAULT_TAX_RATE=0.25

# API
RAG_API_PORT=8504

# Caching
RAG_EMBEDDING_CACHE_DIR=.cache/embeddings
RAG_LLM_CACHE_DIR=.cache/llm_responses
RAG_LLM_CACHE_SIZE_LIMIT_MB=500

# Neo4j (optional - set NEO4J_URI to enable graph store)
# Local Docker: docker compose --profile graph up
# NEO4J_URI=bolt://localhost:7687
# Neo4j Aura: use your Aura connection URI
# NEO4J_URI=neo4j+s://<instance-id>.databases.neo4j.io
# NEO4J_USERNAME=neo4j
# NEO4J_PASSWORD=changeme

# Logging (text or json)
LOG_LEVEL=INFO
LOG_FORMAT=text
