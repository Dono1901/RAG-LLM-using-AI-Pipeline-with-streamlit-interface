# RAG-LLM Financial Report Insights - Environment Variables
# Copy this file to .env and fill in your values

# Ollama settings
RAG_LLM_MODEL=llama3.2
RAG_EMBEDDING_MODEL=all-MiniLM-L6-v2
OLLAMA_HOST=http://localhost:11434

# Document settings
RAG_CHUNK_SIZE=500
RAG_CHUNK_OVERLAP=50
RAG_TOP_K=3

# Limits
RAG_MAX_FILE_SIZE_MB=50
RAG_MAX_QUERY_LENGTH=2000
RAG_MAX_TOP_K=10
RAG_MAX_WORKBOOK_ROWS=50000

# Caching
RAG_EMBEDDING_CACHE_DIR=.cache/embeddings
RAG_LLM_CACHE_DIR=.cache/llm_responses
RAG_LLM_CACHE_SIZE_LIMIT_MB=500

# Logging (text or json)
LOG_LEVEL=INFO
LOG_FORMAT=text
